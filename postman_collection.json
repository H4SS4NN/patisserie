        },
        {
          "name": "Get Calendar (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/calendar?date_from=2025-12-01&date_to=2025-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "calendar"],
              "query": [
                {
                  "key": "date_from",
                  "value": "2025-12-01"
                },
                {
                  "key": "date_to",
                  "value": "2025-12-31"
                }
              ]
            }
          }
        },
        {
          "name": "Get Stats (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "stats"]
            }
          }
