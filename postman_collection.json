            "url": {
              "raw": "{{baseUrl}}/orders",
              "host": ["{{baseUrl}}"],
              "path": ["orders"]
            }
          }
        },
        {
          "name": "Create Order (PAYPAL)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client_name\": \"Sami Dupont\",\n  \"client_phone\": \"+33612345678\",\n  \"client_email\": \"sami@example.com\",\n  \"items\": [\n    {\n      \"product_id\": \"product-uuid-here\",\n      \"name\": \"Fraisier 6 parts\",\n      \"qty\": 1,\n      \"options\": {\n        \"taille\": \"6 parts\"\n      },\n      \"price\": 4500\n    }\n  ],\n  \"pickup_or_delivery_date\": \"2025-12-24T10:00:00+01:00\",\n  \"payment_method\": \"PAYPAL\",\n  \"notes\": \"Message sur le gâteau : Joyeux Noël\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/orders",
              "host": ["{{baseUrl}}"],
              "path": ["orders"]
            }
          }
        },
        {
          "name": "Get Orders (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/orders?status=PENDING&payment_status=PENDING",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "orders"],
              "query": [
                {
                  "key": "status",
                  "value": "PENDING"
                },
                {
                  "key": "payment_status",
                  "value": "PENDING"
                }
              ]
            }
          }
        },
        {
          "name": "Get Order by ID (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/orders/:id",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "orders", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "order-uuid"
                }
              ]
            }
          }
        },
        {
          "name": "Update Order Status (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"CONFIRMED\",\n  \"notes\": \"Commande confirmée\"\n}",
              "options": {
