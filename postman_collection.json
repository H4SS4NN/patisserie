{
  "info": {
    "name": "Patisserie API",
    "description": "Collection complète pour l'API de gestion de commandes pâtisserie",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.token) {",
                  "        pm.collectionVariables.set('token', jsonData.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Verify 2FA",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user-id-here\",\n  \"token\": \"123456\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/2fa/verify",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "2fa", "verify"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "Setup 2FA",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/2fa/setup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "2fa", "setup"]
            }
          }
        },
        {
          "name": "Enable 2FA",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"secret\": \"base32-secret\",\n  \"token\": \"123456\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/2fa/enable",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "2fa", "enable"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/products",
              "host": ["{{baseUrl}}"],
              "path": ["products"]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/products/:id",
              "host": ["{{baseUrl}}"],
              "path": ["products", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "product-uuid"
                }
              ]
            }
          }
        },
        {
          "name": "Create Product (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Fraisier 6 parts\",\n  \"description\": \"Délicieux fraisier avec fraises fraîches\",\n  \"price\": 4500,\n  \"options\": {\n    \"taille\": \"6 parts\",\n    \"deco\": \"standard\"\n  },\n  \"image_url\": \"https://example.com/fraisier.jpg\",\n  \"available\": true\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/products/admin/products",
              "host": ["{{baseUrl}}"],
              "path": ["products", "admin", "products"]
            }
          }
        },
        {
          "name": "Update Product (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Fraisier 8 parts\",\n  \"price\": 5500,\n  \"available\": true\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/products/admin/products/:id",
              "host": ["{{baseUrl}}"],
              "path": ["products", "admin", "products", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "product-uuid"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Product (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/admin/products/:id",
              "host": ["{{baseUrl}}"],
              "path": ["products", "admin", "products", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "product-uuid"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order (CASH)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client_name\": \"Sami Dupont\",\n  \"client_phone\": \"+33612345678\",\n  \"client_email\": \"sami@example.com\",\n  \"items\": [\n    {\n      \"product_id\": \"product-uuid-here\",\n      \"name\": \"Fraisier 6 parts\",\n      \"qty\": 1,\n      \"options\": {\n        \"taille\": \"6 parts\"\n      },\n      \"price\": 4500\n    }\n  ],\n  \"pickup_or_delivery_date\": \"2025-12-24T10:00:00+01:00\",\n  \"payment_method\": \"CASH\",\n  \"notes\": \"Message sur le gâteau : Joyeux Noël\"\n}",
              "options": {
